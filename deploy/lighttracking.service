[Unit]
Description=LightTracking PI Service
After=network.target

[Service]
Type=simple
User=lighttrack
EnvironmentFile=/etc/lighttracking.env
WorkingDirectory=/opt/lighttracking
ExecStart=/usr/bin/env uvicorn app.main:app --host 0.0.0.0 --port ${PORT:-8000}
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target
